#!/usr/bin/env ruby

require "bundler/setup"
require 'mongoid'
Mongoid.load!("config/mongoid.yml", :development)
require File.expand_path('../../models/models', __FILE__)

if ARGV[0] == 'new'
  puts "--> Cleaning"

  DbCounter.destroy_all
  Quote.destroy_all
end

class Configuration
  FETCHER   = 2
  PROCESSOR = 2
  DEALER    = 8
  SHARE     = 250
end

manager = Manager.new(:irrational_exuberance_dealer)

puts "--> Starting sampling"
count = Quote.count
loop do
  manager.dispatch
  break if Quote.count - count >= 1
end

puts "--> Starting dealing"
loop do
  manager.dispatch

  manager.deal do |dealers|
    dealers.each_with_index do |dealer, idx|
      dealer.async.deal_buy_first
    end
  end
end
